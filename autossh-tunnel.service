[Unit]
Description=AutoSSH tunnel service
After=network.target

[Service]
User=@AUTOSSH_USR@
Group=@AUTOSSH_GRP@
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -M 0 -v -N -o "ServerAliveInterval=60" -R @BTCPAY_PORT@:localhost:@BTCPAY_PORT@ -R @RTL_PORT@:localhost:@RTL_PORT@ @BTCPAY_PROXY_USR@@@BTCPAY_PROXY_HOST@
StandardOutput=journal

[Install]
WantedBy=multi-user.target
